#!/usr/bin/make -f
include /usr/share/dpkg/pkg-info.mk

%:
	dh $@ --sourcedirectory=libphutil/support/xhpast

help2man = help2man -N --help-option='help --full' --version-string=${DEB_VERSION_UPSTREAM} \
	-o $1 -n '$3' $(CURDIR)/$2/bin/$(subst .1,,$1)
arc.1:
	$(call help2man,$@,arcanist,a code review and revision management utility for phabricator)
override_dh_auto_build:
	$(MAKE) -C libphutil/support/xhpast
override_dh_shlibdeps:
	dh_shlibdeps -l$(CURDIR)/usr/share/libphutil/support/xhpast
override_dh_install:
	dh_install -X.gitignore
override_dh_installman: arc.1
	dh_installman -p arcanist arc.1
clean:
	rm -f arc.1
	dh $@
